<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item  android:state_pressed="true">
        <shape>
            <solid
                android:color="#F7F7F7"
                />

            <corners
                android:radius="5dp" />
            <stroke android:color="#ccc"
                android:width="1dp" />
        </shape>
    </item>
    <item >
        <shape>
            <solid
                android:color="#F0F0F0"
              />
            <stroke android:color="#ccc"
                android:width="1dp" />
          <corners
              android:radius="5dp" />
        </shape>
    </item>


</selector>